<link rel="stylesheet" type="text/css" href="/css/user_sign_up.css">
<div id="sign-up-page">
<h2> Sign Up </h2> 

<form action = "/users/create"  method ="POST">
      <p id="google-sign-up">
            <a href="/users/auth/google"><img src="/images/google.png" height="30" width="30"><span>Sign Up with Google</span></a>
      </p>
  <input type="text" name="name" placeholder="Enter your Name" required> 
  <input type="email" name="email" placeholder="Enter your email" required> 
  <input type="password" name="password" placeholder="Enter your password" required>
  <input type="password" name="confirm_password" placeholder="confirm password" required> 
  <input type="submit" value="Sign Up">

 <p id="already-account">
      <span>Already have an account?</span> 
      <a href="/users/sign-in">Log In</a>
      </p>
    
</form> 

</div>